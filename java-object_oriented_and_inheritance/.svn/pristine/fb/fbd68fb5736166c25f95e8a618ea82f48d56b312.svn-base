package usflix;

import java.util.ArrayList;


public class Movie {

	protected final String title;
	protected final int year;
	protected final String director;
	
	//Movie constructor
	public Movie(String tit, int yr,String dir){
		title = tit;
		year = yr;
		director = dir;
		}
	
	//prints out movie objects from the result ArrayList
	public static void toString(ArrayList<Movie> result) {
		for (int i = 0; i<result.size(); i++) {
			System.out.println(result.get(i).title + "("
					+ result.get(i).year + ") \n"
					+ result.get(i).director);
						
		}
	}

	
}

